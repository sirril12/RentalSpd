<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeAdmin">

    <Button
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:textColor="#fff"
        android:text="data user"
        android:id="@+id/user"
        android:background="@drawable/btnuser"
        android:layout_marginTop="150dp"
        android:layout_gravity="center"/>
    <Button
        android:layout_width="300dp"
        android:id="@+id/transaksi"
        android:layout_height="80dp"
        android:textColor="#fff"
        android:background="@drawable/btntransaksi"
        android:text="data transaksi"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"/>
    <Button
        android:layout_width="300dp"
        android:id="@+id/sepeda"
        android:textColor="#fff"
        android:layout_height="80dp"
        android:background="@drawable/btnsepeda"
        android:text="data sepeda"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"/>
</LinearLayout>